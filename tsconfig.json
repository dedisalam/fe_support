{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "ESNext",
    "sourceMap": true,
    "importHelpers": true,
    "baseUrl": "./src",
    "paths": {
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],
      "@atoms": ["components/atoms"],
      "@atoms/*": ["components/atoms/*"],
      "@molecules": ["components/molecules"],
      "@molecules/*": ["components/molecules/*"],
      "@organisms": ["components/organisms"],
      "@orgsnisms/*": ["components/organisms/*"],
      "@templates": ["components/templates"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@helpers": ["helpers"],
      "@helpers/*": ["helpers/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@props": ["interfaces/components"],
      "@props/*": ["interfaces/components/*"],
      "@args": ["interfaces/hooks"],
      "@args/*": ["interfaces/hooks/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@validations": ["validations"],
      "@validations/*": ["validations/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true
    }
  },
  "include": [
    "src",
    ".eslintrc.js",
    ".prettierrc.js",
    "configs",
    "webpack.config.js"
  ],
  "exclude": ["node_modules"]
}
